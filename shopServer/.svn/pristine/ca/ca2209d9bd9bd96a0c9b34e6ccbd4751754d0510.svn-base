<link rel="stylesheet" type="text/css" href="static/css/comm.css"/>
<link rel="stylesheet" type="text/css" href="static/css/login.css"/>
<script type="text/javascript" src="static/js/jquery.js"></script>
<script type="text/javascript" src="static/js/jquery.flexslider-min.js"></script>

</head>

<body >

<div class="header header_fixed clearfix">
	<div class="header1">
		<div class="header1in">
			<ul class="headerul1">
				<li >欢迎来到xxxx商城!</li></ul>
                <ul class="headerul2">
				<li style="_width:49px;"><a href="">登录</a></li>
				<li style="_width:49px;"><a href="">注册</a></li>
                <li class="hreder-hover"><a href="" target="_blank" style="border-right:none;_width:213px;padding-left:30px"><i class="header_phone"></i>在线客服 : <b style="font-size:16px;">400-654-1024</b></a></li>
			</ul>
		</div>
	</div>
	
</div>
<!-- 导航   start  -->



<div class="login">
	<div class="login_bg">
		<div id="loadingPicBlock" class="login_banner"><img src="static/myfile/login.png" ></div>
		<div class="login_box" id="LoginForm">
			<form id="loginForm" class="registerform" method="post" action="loginApi/">
				<p ><b style="float:left">会员登录</b><span class="rapidregister"><a style="color:#e23c40">快速注册</a></span><span  >还不是微分销会员?</span></p>
				<ul>				
					<li class="click">
					<input class="text_password" name="username" type="text" placeholder="用户名"/> <i class="login_user"></i>
				</li>
				<li>
					<input class="text_password" name="password" type="password" placeholder="输入登录密码"/> <i class="login_password"></i>
				</li>
				<p style="width:100%;height:20px;clear:both"><p>
				<li class="login_more">
					<dd ><input type="checkbox" style="vertical-align: middle;"/> 记住密码</dd>
					<dd style=" text-align:right">忘记密码?</dd>
				</li>
				<p style="width:100%;height:20px;clear:both"><p>
					<li class="end"><input id="login" name="submit" type="button" value="登录" class="login_login" > </li>
				</ul>
			</form>
		</div>
		<div class="login_box register_box" id="LoginForm" style="display:none">
			<form id="registerForm" class="registerform" method="post" action="register/" onsubmit="registerFn()">
				<p style="margin-left:110px;"><b style="float:left">会员注册</b></p>
				<ul>				
					<li class="click">
					<input class="text_password" name="username" type="text" placeholder="用户名"/> <i class="login_user"></i>
					</li>
				<li>
					<input class="text_password" name="password" type="password" placeholder="输入登录密码"/> <i class="login_password"></i>
				</li>
				<p style="width:100%;height:20px;clear:both">
				</p>
				<a href="" style="color:red; float:right;">已有账号>>>>></a>	
				<p style="width:100%;height:20px;clear:both"></p>
					<li class="end"><input id="register" name="submit" type="button" value="注册" class="login_login" > </li>
				</ul>
			</form>
		</div>
	</div>
</div>
<div class="footer-time-list" style="border-top:0">
				<div class="yFootBottomRight" style="text-align:inherit;color: #7b7b7b;">
						Copyright@2014asdfasdfasdfasdfasdf
				</div>
			
			</div>
</body>
<script>
	//ajax请求函数
	function ajaxFn(url , data){
		$.ajax({
			url: url,
			type: 'POST',
			data: data,
			success: function (data)
			{
				console.log(data);
				alert("成功了/////////");
			},
			error: function(err)
			{
				console.log(err);
				alert("失败了");
			}
		});
	}
	//调用登陆按钮
	$("#login").click(function(){
		console.log("login");
		ajaxFn("loginApi/" , $("#loginForm").serialize())
	});
	//调用注册按钮
	$("#register").click(function(){
		console.log("register");
		ajaxFn("register/" , $("#registerForm").serialize())
	});  
	//登陆切换按钮切换
	$(".rapidregister").click(function (){
		$(".login_box").css("display" , "none")
		$(".register_box").css("display" , "block")
	});

</script>
</html>